{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "PyInstaller build",
      "type": "shell",
      "command": "pyinstaller mmt_app.spec --noconfirm",
      "options": { "venv": ".venv" },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "PyInstaller clean build",
      "type": "shell",
      "command": "pyinstaller mmt_app.spec --clean --noconfirm",
      "options": { "venv": ".venv" },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Run tests",
      "type": "shell",
      "command": "pytest -v",
      "options": { "venv": ".venv" },
      "group": "test",
      "problemMatcher": []
    }
  ]
}
